<div class='person person-div' data-container='edit-person'>
  <form action="<%= url %>" data-behavior="update-person">
    <p>
      <label for="first_name" class="form-label">First Name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= firstName %>">
    </p>
    <p>
      <label for="last_name" class="form-label">Last Name:</label>
      <input type="text" name="last_name" id="last_name" value="<%= lastName %>">
    </p>
    <p>
      <label for="address" class="form-label">Address:</label>
      <textarea name="address" id="address"><%= address %></textarea>
    </p>
    <input type="submit" value="Edit Person">
  </form>
</div>